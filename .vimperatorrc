" vim: set ft=vimperator:

" Basics

" Disable accesskey
set! ui.key.generalAccessKey=0

" Disable auto focus
set focuscontent

" Hit a Hint
set hintchars=asdfghjkl
hi Hint z-index:100000; 

" When enter the command line mode then kill IME
style -name commandline-ime chrome://* #liberator-commandline-command input {ime-mode: inactive;}

" Kill beep
" set visualbell
" highlight Bell display:none
javascript liberator.beep = function() true

" Key mapping

noremap j 5j
noremap k 5k
noremap <S-b> :bmarks<CR>
cmap <C-d> <Del>
imap <C-d> <Del>
cmap <C-h> <BS>
imap <C-h> <BS>

" <C-k>で行末まで削除 
js mappings.addUserMap([modes.INSERT, modes.COMMAND_LINE], ["<C-k>"], "Delete until end of current line", function() true, { route: true }); 
map <C-l> o
map <C-t> t

colorscheme indigo
